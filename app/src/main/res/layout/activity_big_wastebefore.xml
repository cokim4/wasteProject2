<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BigWastebefore">

    <LinearLayout
        android:id="@+id/bwbflinear1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bwbflinear2">

        <Button
            android:id="@+id/bwbfinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대형 폐기물 수수료 정보"
            android:layout_marginVertical="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bwbflinear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="5"
        app:layout_constraintTop_toBottomOf="@id/bwbflinear1"
        app:layout_constraintBottom_toTopOf="@id/bwbflinear3">

        <Button
            android:id="@+id/bwbfcam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_camera"
            android:layout_marginVertical="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bwbflinear3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintVertical_weight="4"
        app:layout_constraintTop_toBottomOf="@id/bwbflinear2"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="촬영 전 유의 사항"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>